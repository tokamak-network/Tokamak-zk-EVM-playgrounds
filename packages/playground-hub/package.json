{
  "name": "tokamak-zk-evm-playground-hub",
  "productName": "tokamak-zk-evm-playground-hub",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": ".vite/build/main.js",
  "module": "./dist/esm/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:signed": "NODE_ENV=production electron-forge make --platform=darwin",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module es2020 --outDir dist/esm"
  },
  "build": {
    "appId": "tokamak-zk-evm-playground-hub",
    "mac": {
      "icon": "src/assets/icons/app-icon.icns",
      "entitlements": "src/entitlements.plist",
      "entitlementsInherit": "src/entitlements.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": "project-ooo"
    },
    "win": {
      "icon": "src/assets/icons/app-icon.png"
    },
    "linux": {
      "icon": "src/assets/icons/app-icon.png"
    }
  },
  "keywords": [],
  "author": {
    "name": "SonYoungsung",
    "email": "sysgigigi@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron-forge/plugin-vite": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@tailwindcss/vite": "^4.1.7",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "35.1.4",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "tailwindcss": "^4.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.4.17"
  },
  "dependencies": {
    "@types/jszip": "^3.4.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "jotai": "^2.12.2",
    "jszip": "^3.10.1",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0"
  }
}
